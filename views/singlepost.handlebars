<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  

</div>
<div>
    {{#if comments}}
    <h3>Comments:</h3> 

    {{#each comments as |comment|}} 
    <p>{{comment.comment}}</p> 
      <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      {{/each}}
    {{/if}}  
</div>
{{#if logged_in}}
<div>
    <form class="form new-project-form">
    
      <div class="form-group">
        <label for="comment">comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form> 


</div>
{{else}}
<p>To leave a comment, you must be logged in!</p> 

{{/if}}
