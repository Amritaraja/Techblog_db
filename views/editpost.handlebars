  <div class="col-md-6">
    <h3>Edit Post</h3> 

    <form class="form new-project-form">
        <input type="hidden" value="{{id}}" id="post_id">
      <div class="form-group">
        <label for="project-name">title:</label>
        <input class="form-input" value="{{title}}" type="text" id="project-name" name="project-name" />
      </div>
     
      <div class="form-group">
        <label for="project-desc">content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
         <button type="submit" class="btn btn-danger">Delete</button>
      </div>
    </form>
  </div>

